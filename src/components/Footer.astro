---
import Form from './Form.astro';
import SocialLinks from './SocialLinks.astro';
---

<footer class="padding-block-2xl bg-dark-blue">
	<div class="wrapper">
		<div class="footer-grid">
			<img class="logo" src="/images/logo-light.svg" alt="Manage's logo" />

			<ul class="list-unstyled sn-links flex gap">
				<SocialLinks />
			</ul>

			<ul class="list-unstyled site-links">
				<li><a href="#">Home</a></li>
				<li><a href="#">Pricing</a></li>
				<li><a href="#">Products</a></li>
				<li><a href="#">About us</a></li>
			</ul>

			<ul class="list-unstyled site-links">
				<li><a href="#">Careers</a></li>
				<li><a href="#">Community</a></li>
				<li><a href="#">Products</a></li>
				<li><a href="#">Privacy Policy</a></li>
			</ul>
			<div class="form">
				<Form />
			</div>

			<p class="text-xs">Copyright <span class="copy-year"></span>. All rights reserved</p>
		</div>
	</div>
</footer>

<style>
	a:hover {
		color: hsl(var(--crl-bright-red) / 0.5);
	}
	.footer-grid {
		display: grid;
		grid-template-areas:
			'logo links1 links2 form'
			'sn links1 links2 cr';
		gap: var(--space-m);
	}

	img.logo {
		grid-area: logo;
	}

	.sn-links {
		grid-area: sn;
	}

	ul {
		margin: 0;
		padding: 0;
		color: hsl(var(--crl-very-light-gray));
	}

	ul:nth-of-type(2) {
		grid-area: links1;
	}

	ul:nth-of-type(3) {
		grid-area: links2;
	}

	.site-links li {
		line-height: 2;
	}

	.form {
		grid-area: form;
		justify-self: end;
	}

	p {
		grid-area: cr;
		text-align: right;
		justify-self: end;
	}

	@media screen and (max-width: 850px) {
		.footer-grid {
			margin-inline: auto;
			grid-template-areas:
				'form form'
				'links1 links2'
				'sn sn'
				'logo logo'
				'cr cr';
		}
		.form {
			justify-self: center;
		}
		p {
			text-align: center;
			justify-self: center;
		}

		img.logo {
			grid-area: logo;
			justify-self: center;
		}

		ul:nth-of-type(2) {
			justify-self: center;
		}

		ul:nth-of-type(3) {
			justify-self: center;
		}

		.sn-links {
			justify-self: center;
			justify-content: space-evenly;
			width: 80%;
		}
	}
</style>

<script>
	const date = document.querySelector('.copy-year');
	date.textContent = new Date().getFullYear();
</script>
